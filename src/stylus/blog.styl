.blogpost-link
	min-height 8em
	width 100%
	background-repeat no-repeat
	background-size cover
	text-align center
	vertical-align middle
	margin 0
	line-height 8em
	cursor pointer

.blogpost-link:hover
	background-image none !important
	background-color black

.blogpost-link p
	display none
	:hover
		color white
		display text !important

.blogpost-link p:hover
	

*
	-webkit-margin-before: 0
	-webkit-margin-after: 0

body 
	margin 0
	padding 0