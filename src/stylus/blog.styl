.blogpost-link
	width 100%

.slug-link
	min-height 8em
	width 100%
	background-repeat no-repeat
	background-size cover
	text-align center
	vertical-align middle
	margin 0
	line-height 8em
	cursor pointer
	border-bottom solid 1px white

.slug-container
	// padding 1em 0
	display inline-block
	visibility hidden
	// line-height 1em
	vertical-align middle
	width 100%

.slug-title
	font-size 3em
	font-family 'Montserrat'
	font-weight 700
	line-height 3em

.slug-date
	font-size 1em
	display inline-block
	font-family 'Open Sans'
	font-weight bold
	line-height 1em
	padding .25em 0em .25em 2em
	color white
	background-color orange
	width 100%

.show-on-hover
	visibility visible !important
	background-image none !important
	background-color black
	color white

#bloglist
	overflow-y scroll

*
	-webkit-margin-before: 0
	-webkit-margin-after: 0

.bold
	font-weight bold

body
	margin 0
	padding 0

.blog-nav
	width 100%
	padding 2em 1em
	display	block
	text-align center
	background-color #222
	.nav-links
		width 36em
		display inline-block
		text-align left
		margin-bottom 1em
		p
			display block
			color white
			a
				font-family 'Montserrat'
				padding .5em
				color orange
		a
			color orange
		> a
			margin-top 1em
.nav-sig
	padding 2em

#g-icon
	display inline-block
	background-image url('/img/george-logo-white.png')
	-webkit-background-size contain
	background-size contain
	background-repeat no-repeat
	width 50px
	height 50px

a
	text-decoration none

.blog-post a
	color blue

.blog-post a:visited
	color blue

.blog-post a:hover
	color orange


.blog-post
	width 100%
	padding 2em 0 0 0
	text-align center
	display block

	a
		color blue
		font-weight bold
	a:visited
		color blue
	a:hover
		color orange


.blog-content
	max-width 42em
	display inline-block

.share-links
	display inline-block
	width 100%
	padding-bottom 1em
	text-align center
	.qs-container
		padding 1em
		display inline-block
		border-top dotted 2px #eee
		.qs-link
			padding 0 1em
			color #aaa
		.qs-link:hover
			color orange



.post-title
	// text-decoration underline
	font-family 'Montserrat'
	font-weight 700
	font-size 2em
	margin .75em 0
	// border-bottom solid 2px black
	display	inline-block

.post-content
	padding 2em 1em 1em 1em
	text-align left
	p
		margin 0 2em 1em 2em
		text-align left
	a
		text-align left
	h1,h2,h3,h4,h5,h6
		margin 1em 0
		padding-left 4em

.blog-page
	font-family 'Open Sans'
	font-size 1em
