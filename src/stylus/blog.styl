.blogpost-link
	min-height 8em
	width 100%
	background-repeat no-repeat
	background-size cover
	text-align center
	vertical-align middle
	margin 0
	line-height 8em
	cursor pointer
	border-bottom solid 1px white
	.title-container
		padding 1em 0
		display inline-block
		visibility hidden
		line-height 1em
		vertical-align middle
		font-size 50px

.blogpost-link:hover
	background-image none !important
	background-color black
	color white

.show-on-hover
		visibility visible !important

#bloglist
	overflow-y scroll

*
	-webkit-margin-before: 0
	-webkit-margin-after: 0

body
	margin 0
	padding 0
