
//Page
cascade-stream
	width 100%
	min-height 10%
	display block
	background-color gray


//Page Flipper

page-flipper
	display block
	width 100%
	height 90%
	background-color silver

//Cascade Stream
.cs-block
	display inline-block
	text-align center
	color white
	font-family 'Open Sans', Helvetica, sans-serif
	padding 1em

.cs-row
	width 100%

.cs-full
	width 100% !important

.cs-not-full
	width 33%

.stream-one
	background-color alizarin
	border-top solid 1em darken(alizarin,10)

.stream-two
	background-color indigo
	border-top solid 1em darken(indigo,10)

.stream-three
	background-color nieman_teal
	border-top solid 1em darken(nieman_teal,10)
