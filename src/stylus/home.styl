
//Page
cascade-stream
	width 100%
	min-height 20%
	display block
	background-color gray


//Page Flipper

page-flipper
	display block
	width 100%
	height 80%
	background-color light_gray

//Cascade Stream
.cs-block
	display inline-block
	text-align center
	color white
	font-family 'Open Sans', Helvetica, sans-serif
	padding 1em

.cs-row
	width 100%

.cs-full
	width 100% !important

.cs-not-full
	width 33.3%

.cs-hidden
	display none

.touch .cs-hidden
	display initial

.stream-two
	background-color darken(n_teal,0)
	border-top solid 1em darken(n_teal,10)

.stream-one
	background-color darken(alizarin,0)
	border-top solid 1em darken(alizarin,10)

.stream-three
	background-color darken(jonquil,0)
	border-top solid 1em darken(jonquil,10)

#bio-content
	width 100%

#bio-content .bio-part:not(.bio-expanded)
	width 30%
	display inline-block
	.img-container
		border dotted 3px white
		border-radius 50%
		margin 1em
		padding 20px
		width 140px
		height 140px
		display inline-block
	.img-info
		display none

#bio-content .bio-arrow:not(.bio-expanded)
	width 5% !important

.bio-part
	div
		width 50%

#bio-content .bio-expanded
	div
		display inline-block

.bio-expanded
	width 100%

.bio-part:not(.bio-expanded)
	width 33%

ul
	text-align left
