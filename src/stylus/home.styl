
//Page

#home-footer
	background-color slate
	width 100%
	text-align center
	padding-top 1em
	padding-bottom 1em
	span
		color white
		font-size .75em
		font-family 'Montserrat', Arial sans-serif

cascade-stream
	width 100%
	min-height 20%
	display block
	background-color slate

page-flipper
	display block
	width 100%
	// height 80%
	background-color white

//Page Flipper

.page-flipper-container
	position relative
	padding-top 1em
	width 100%
	height 100%
	background-size cover

.page-flipper-controller
	background-color jonquil
	color #111
	padding 0 .25em
	margin-left 0.125em
	cursor pointer

.no-touch .page-flipper-controller:hover
	background-color darken(jonquil,10)

.page-flipper-control-content
	font-family 'Bitter', Courier Sans
	display	inline-block
	margin 1em
	padding-top 1em
	color white

blur_val = 25px

.page-flipper-control-background
	-webkit-filter blur(blur_val)
	-moz-filter blur(blur_val)
	-o-filter blur(blur_val)
	-ms-filter blur(blur_val)
	filter blur(blur_val)
	background-color #000

.page-flipper-control
	position absolute
	left 10%
	top 10%
	width 450px
	height 15em

.page-flipper-top
	font-size 3.5em

.page-flipper-mid
	font-size 2em
	user-select none

.page-flipper-bottom
	font-size 1.5em

	padding-top 1em
	text-indent 1em
	a
		// color blue
		// background-color white
		padding 2px 15px
		background-color n_teal
		color white

.no-touch .page-flipper-bottom a:hover
	background-color darken(n_teal, 10)

.hidden
	display none
	visibility hidden

//Cascade Stream
.cs-block
	display inline-block
	text-align center
	color white
	font-family 'Open Sans', Helvetica, sans-serif
	padding-top 2em
	padding-bottom 2em
	height 100%
	cursor pointer

.cs-row
	width 100%

.cs-full
	width 100% !important

.cs-not-full
	width 33.3%

.cs-hidden
	display none

.touch .cs-hidden
	display initial

.stream-two
	background-color darken(n_teal,0)
	border-top solid 1em darken(n_teal,10)
	i
		color white
	> .stream-content > div
		background-color darken(n_teal,5)

.stream-one
	background-color darken(alizarin,0)
	border-top solid 1em darken(alizarin,10)
	i
		color white
	> .stream-content > div
		background-color darken(alizarin,5)

.stream-three
	background-color darken(indigo,0)
	border-top solid 1em darken(indigo,10)
	i
		color darken(indigo,5)
		text-shadow -1px -1px 0 darken(indigo,0),  1px -1px 0 darken(indigo,0), -1px 1px 0 darken(indigo,0), 1px 1px 0 darken(indigo,0)
	> .stream-content > div
		background-color darken(indigo, 5)


.stream-title
	font-size 2em
	font-family 'Montserrat', Arial, sans-serif
	padding-bottom 1em

.stream-content
	> div
		display inline-block
		margin	2px
		padding 1em
.stream-content
	a
		width 160px
		height 160px
		display inline-block
		line-height 160px
		i
			vertical-align middle
			font-size 6em

@media (max-width: 400px)
	.cs-not-full
		width 100%

	.cs-hidden
		display initial !important

	.page-flipper-control
		width 100%
		height 80%
