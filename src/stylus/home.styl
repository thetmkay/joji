@import('nib')

*
	box-sizing border-box

body,html
	margin 0
	padding 0
	overflow hidden

#home-slide-show
	> div
		width: 100%
		position relative
		color #aaa
		z-index 3
	overflow auto
	

#background-image
	background-size cover
	background-repeat no-repeat
	color white
	position fixed
	left 0
	right 0
	bottom 0
	top 0

@media only screen and (max-width: 480px)
	#background-image
		background-image url('/img/sandboxsmall.jpg')

#test
	color red

@media only screen and (min-width: 480px) and (max-width: 640px)
	#background-image
		background-image url('/img/sandboxmedium.jpg')

#aboutPage	
	color white

@media only screen and (min-width: 640px)
	#background-image
		background-image url('/img/sandboxlarge.jpg')

#contactPage
	color #aaa

#blogPage
	color black

#slideNav
	position absolute
	left: 5%
	bottom: 5%
	padding-left: 20px
	font-family 'Hammersmith One', sans-serif
	> p
		cursor pointer
		opacity 0.3
	> p:hover
			opacity 1.0

.full-opacity
	opacity 1.0 !important

.row
	clearfix()

